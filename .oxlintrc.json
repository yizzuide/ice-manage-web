{
  "rules": {
    "no-debugger": "error",
    "no-console": "off",
    "no-unused-vars": "off",
    "prefer-const": "warn",
    "no-var": "error",
    "no-plusplus": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "ignore": [
    "node_modules",
    "dist",
    "build",
    "public",
    "*.d.ts",
    "*.config.js"
  ]
}
